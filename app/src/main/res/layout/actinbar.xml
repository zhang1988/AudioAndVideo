<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhangchao.audioandvideo.BaseActivity">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivLeft"
            android:layout_width="@dimen/dimenPx140"
            android:layout_height="@dimen/dimenPx140" />

        <TextView
            android:layout_marginLeft="@dimen/dimenPx36"
            android:id="@+id/tvLeftTitle"
            android:text="222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvMidTitle"
        android:text="23445"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRightTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ivRight"
            android:layout_width="@dimen/dimenPx200"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true" />
    </LinearLayout>
</RelativeLayout>
